<h1>Login</h1>

<div class='form-container'>
  <%= form_tag '/login' do %>
  <div class='form-group'>

    <label>Email:</label> <%= text_field_tag :email %>
  </div>
  <div class='form-group'>

    <label>Password:</label> <%= password_field_tag :password %>
  </div>
  <div class='form-group'>

    <%= submit_tag "Submit" %>
  </div>
  <% end %>
</div>