<h1>Signup!</h1>

<div class='form-container'>
  <%= form_for :user, url: '/users' do |f| %>
  <div class='form-group'>

    <label>Name:</label> <%= f.text_field :name %>
  </div>
  <div class='form-group'>

    <label>Email:</label> <%= f.text_field :email %>
  </div>
  <div class='form-group'>

    <label>Password:</label> <%= f.password_field :password %>
  </div>
  <div class='form-group'>

    <label>Password Confirmation:</label> <%= f.password_field :password_confirmation %>
  </div>
  <div class='form-group'><%= f.submit "Submit" %>
  </div>
  <% end %>
</div>